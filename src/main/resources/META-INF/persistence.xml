<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="guddi-ds" transaction-type="JTA">
  	
  	<jta-data-source>java:jboss/datasources/guddiDS</jta-data-source>
           
    <class>br.gov.frameworkdemoiselle.guddi.domain.Atributo</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Descritor</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Excecao</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Orgao</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Papel</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Pesquisa</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Servico</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Sistema</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Tag</class>
    <class>br.gov.frameworkdemoiselle.guddi.domain.Usuario</class>
    <!-- 
    <shared-cache-mode>ALL</shared-cache-mode>
     -->
    <properties>
    	
     	<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="false" />
		<property name="hibernate.hbm2ddl.auto" value="none" />	
    <!-- 
    	<property name="eclipselink.logging.level" value="FINE"/>
      	<property name="eclipselink.ddl-generation" value="create-tables"/>
      	<property name="eclipselink.ddl-generation.output-mode" value="database"/>
     -->
    </properties>
  </persistence-unit>
</persistence>
